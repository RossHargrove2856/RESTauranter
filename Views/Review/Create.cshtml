@{
    ViewData["Title"] = "Create";
}

@using RESTaurant.Models
@model RESTaurant.Models.ReviewViewModel
<div class="container">
<a href="/Reviews">See All Results</a>
<h2>Add a Review</h2>
    <form asp-controller="Review" asp-action="AddReview" method="post">
        <span asp-validation-for="name"></span>
        <div class="form-group row">
            <label asp-for="name" class="col-sm-2 col-form-label align-top"></label>
            <div class="col-sm-10">
                <input asp-for="name" class="form-control">
            </div>
        </div>
        <span asp-validation-for="stars"></span>
        <div class="form-group row">
            <label asp-for="stars" class="col-sm-2 col-form-label align-top"></label>
            <div class="col-sm-10">
                <input asp-for="stars" class="form-control">
            </div>
        </div>
        <span asp-validation-for="restaurant_name"></span>
        <div class="form-group row">
            <label asp-for="restaurant_name" class="col-sm-2 col-form-label align-top"></label>
            <div class="col-sm-10">
                <input asp-for="restaurant_name" class="form-control">
            </div>
        </div>
        <span asp-validation-for="review"></span>
        <div class="form-group row">
            <label asp-for="review" class="col-sm-2 col-form-label align-top"></label>
            <div class="col-sm-10">
                <textarea asp-for="review" rows="3" class="form-control"></textarea>
            </div>
        </div>
        <span asp-validation-for="date_of_visit"></span>
        <div class="form-group row">
            <label asp-for="date_of_visit" class="col-sm-2 col-form-label align-top"></label>
            <div class="col-sm-10">
                <input asp-for="date_of_visit" type="date" class="form-control">
            </div>
        </div>
        <div class="form-group-row">
            <button type="submit" class="btn btn-primary">Add Review</button>
        </div>
    </form>
</div>